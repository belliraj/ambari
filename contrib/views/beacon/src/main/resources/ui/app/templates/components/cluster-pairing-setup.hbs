<div class="pairing-container">
  PAIRING
  <div class="">
    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <div class="navbar-header">
          <span class="navbar-brand">SOURCE CLUSTER</span>
        </div>
      </div>
    </nav>
    <div class="container-fluid">
      <div class="row">
        <div class="col-xs-2">
          <span class="smaller-font">NAME</span>
        </div>
        <div class="col-xs-5">
          <span class="smaller-font">DATA CENTER</span>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-2">
          <span class="smaller-font">{{localClusterDetails.name}}</span>
        </div>
        <div class="col-xs-5">
          {{input class="smaller-font" value= localClusterDetails.colo}}
        </div>
      </div>
    </div>
  </div>
  <div class="">
    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <div class="navbar-header">
          <span class="navbar-brand">REMOTE CLUSTERS</span>
        </div>
      </div>
    </nav>
    <div class="container-fluid">
      {{#each remoteClusters as |cluster index|}}
      <div class="row">
        <div class="col-xs-2">
          <span class="smaller-font">NAME</span>
        </div>
        <div class="col-xs-2">
          <span class="smaller-font">DATA CENTER</span>
        </div>
        <div class="col-xs-2">
          <span class="smaller-font">USER NAME</span>
        </div>
        <div class="col-xs-2">
          <span class="smaller-font">PASSWORD</span>
        </div>
        <div class="col-xs-2">

        </div>
      </div>
      <div class="row">
        <div class="col-xs-2">
          <span class="smaller-font">{{cluster.name}}</span>
        </div>
        <div class="col-xs-2">
          {{input class="smaller-font" value= cluster.colo}}
        </div>
        <div class="col-xs-2">
          {{input class="smaller-font" value= cluster.username}}
        </div>
        <div class="col-xs-2">
          {{input type="password" class="smaller-font" value= cluster.password}}
        </div>
        <div class="col-xs-2">
          <button type="button" class="smaller-font btn btn-success" name="button" {{action 'pairCluster' index}}>Start Pairing</button>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
</div>
{{yield}}

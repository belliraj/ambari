<div class="left-nav-bar">
  <div class="list-group list-group-root well">
    <div class="list-group-item">
      CLUSTER PAIRINGS
      {{#link-to "data-manager.replication-setup" class="smaller-font"}}
        <i class="fa fa-plus-square-o pull-right"></i>
      {{/link-to}}
    </div>
    {{#each groupedClusters as |group|}}
    <div data-target="#group-{{group.dataCenter}}" class="list-group-item group-name" data-toggle="collapse">
      {{#if (contains group.clusters currentCluster)}}
        <i class="fa fa-check-circle-o" aria-hidden="true"></i>{{group.dataCenter}}
      {{else}}
        {{group.dataCenter}}
      {{/if}}
      <i class="fa fa-chevron-down pull-right" aria-hidden="true"></i>
    </div>
    <div class="list-group collapse" id="group-{{group.dataCenter}}">
      {{#each group.clusters as |cluster|}}
      <a class="list-group-item">
        {{#if (eq cluster.name currentCluster.name)}}
          <i class="fa fa-check-circle-o" aria-hidden="true"></i>{{cluster.name}}
        {{else}}
          {{cluster.name}}
        {{/if}}
      </a>
      {{/each}}
    </div>
    {{/each}}
  </div>
</div>
{{yield}}
